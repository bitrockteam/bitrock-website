{
  "name": "bitrock-website",
  "displayName": "Bitrock",
  "config": {
    "themeColor": "#2a2a2a"
  },
  "description": "In order to successfully develop and apply innovative technology you need to be able to look beyond the horizon, anticipating trends and recognizing the next standards.",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:bitrockteam/bitrock-website.git",
  "author": "Salvatore Laisa <moebiusmania@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development webpack-serve",
    "build:clean": "rm -rf ./dist",
    "build:bundle": "NODE_ENV=production webpack",
    "build:sw": "workbox generateSW workbox-config.js",
    "gh:page": "gh-pages -d ./dist",
    "deploy": "npm run build && npm run gh:page",
    "build": "npm run build:clean && npm run build:bundle && npm run build:sw"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "babel-loader": "8.0.2",
    "css-loader": "1.0.0",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "2.0.0",
    "gh-pages": "1.2.0",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.4.2",
    "node-sass": "4.9.3",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.0",
    "webpack": "4.17.2",
    "webpack-cli": "3.1.0",
    "webpack-notifier": "1.6.0",
    "webpack-pwa-manifest": "3.7.1",
    "webpack-serve": "2.0.2",
    "workbox-cli": "3.4.1"
  },
  "dependencies": {
    "@webcomponents/custom-elements": "1.2.0",
    "bitquest": "1.0.0",
    "hamburgers": "0.9.3",
    "lit-html": "0.10.2",
    "lodash": "4.17.10",
    "normalize.css": "8.0.0",
    "router5": "6.4.2"
  }

{
  "name": "bitrock-website",
  "displayName": "Bitrock",
  "config": {
    "themeColor": "#2a2a2a"
  },
  "description": "In order to successfully develop and apply innovative technology you need to be able to look beyond the horizon, anticipating trends and recognizing the next standards.",
  "version": "1.4.0",
  "main": "index.js",
  "repository": "git@github.com:bitrockteam/bitrock-website.git",
  "author": "Salvatore Laisa <moebiusmania@gmail.com>",
  "license": "MIT",
  "scripts": {
    "serve": "NODE_ENV=production node ./scripts/server.js",
    "start": "NODE_ENV=development webpack-dev-server --hot",
    "build:clean": "rm -rf ./dist",
    "build:bundle": "NODE_ENV=production webpack",
    "gh:page": "gh-pages -d ./dist",
    "deploy": "npm run build && npm run gh:page",
    "build": "npm run build:clean && npm run build:bundle",
    "test:e2e": "npm start & cypress run",
    "test:unit": "ava --verbose",
    "test": "npm run test:unit & npm start & npm run test:e2e"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.3.4",
    "@babel/register": "7.0.0",
    "ava": "1.2.1",
    "babel-loader": "8.0.5",
    "css-loader": "2.1.0",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "3.0.1",
    "gh-pages": "2.0.1",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.5.0",
    "node-sass": "4.11.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "webpack": "4.29.5",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.2.1",
    "webpack-notifier": "1.7.0",
    "webpack-pwa-manifest": "4.0.0",
    "workbox-webpack-plugin": "3.6.3"
  },
  "dependencies": {
    "@vaadin/router": "1.1.0",
    "@webcomponents/custom-elements": "1.2.1",
    "bitquest": "1.0.0",
    "hamburgers": "1.1.3",
    "http-server-pwa": "1.0.1",
    "lit-html": "1.0.0",
    "lodash": "4.17.11",
    "normalize.css": "8.0.1",
    "pwa-helpers": "0.9.1",
    "smoothscroll-polyfill": "0.4.3"
  },
  "ava": {
    "verbose": true,
    "require": [
      "@babel/register"
    ]
  }
}
